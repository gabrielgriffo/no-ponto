{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "NoPonto",
  "version": "0.1.0",
  "identifier": "NoPonto",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "NoPonto",
        "width": 600,
        "height": 800,
        "resizable": false,
        "fullscreen": false,
        "maximizable": false,
        "minimizable": true,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
